------------------------------------------------------------------------
-- TIPOS E DADOS
------------------------------------------------------------------------

N = 3
ids = { 1..N }
datatype produto =  notebook | tablet | celular
valor = { 4, 8 }

------------------------------------------------------------------------
-- CANAIS
------------------------------------------------------------------------

channel vender : produto.valor
channel comprar : ids.produto
channel processar :ids

------------------------------------------------------------------------
-- FUNCOES
------------------------------------------------------------------------

existeComprador(comprador, <>) = false
existeComprador(comprador, < c >^listaCompradores) = 
		if comprador == c then 
			true 
		else 
			existeComprador(comprador, listaCompradores)


------------------------------------------------------------------------
-- AGENTE
------------------------------------------------------------------------

AGENTE(id, produto, valor) = 
					
		vender!produto!valor -> AGENTE(id, produto, valor)
	[]
		comprar!id!produto -> AGENTE(id, produto, valor)


AGENTES = ||| id:ids, p:produto, v:valor @ AGENTE(id, p, v) 

------------------------------------------------------------------------
-- VENDAS
------------------------------------------------------------------------

VENDA(produto, valor) = 
								
		vender?produto?valor -> VENDA(produto, valor)
	[]
		comprar?comprador?prod -> if( produto != prod ) then 
								 	VENDA(produto, valor)
								  else
								 	processar!comprador -> VENDA(produto, valor)

								 


VENDAS = ||| p:produto, v:valor @ VENDA(p, v)

------------------------------------------------------------------------
-- LEILAO
------------------------------------------------------------------------

LEILAO(produto, valor, listaCompradores) =    
		processar?comprador -> if existeComprador(comprador, listaCompradores) then 
							LEILAO(produto, valor, listaCompradores) 
						  else
						  	if( length(listaCompradores) == 3) then
								INICIAR_LEILAO(listaCompradores, valor, 0)
							else
								LEILAO(produto, valor, listaCompradores)
		
		
		

INICIAR_LEILAO(listaCompradores, valor, lance) = SKIP

------------------------------------------------------------------------
-- ASSERTS
------------------------------------------------------------------------ 

assert AGENTES [|{|vender, comprar|}|] VENDAS :[deadlock free] 
assert AGENTES [|{|vender, comprar|}|] VENDAS :[deterministic] 
